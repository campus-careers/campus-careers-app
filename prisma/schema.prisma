generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum Condition {
  excellent
  good
  fair
  poor
}

model User {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  password   String
  role       Role     @default(USER)
  name       String?
  major      String?
  skills     String[] // PostgreSQL `text[]`
  interests  String[] // PostgreSQL `text[]`
  location   String?
  portfolio  String?
}

model Stuff {
  id        Int       @id @default(autoincrement())
  name      String
  quantity  Int
  condition Condition @default(good)
  owner     String
}

model Student {
  id        String   @id @default(uuid())
  email     String   @unique
  fullName  String
  location  String?
  skills    String?
  image     String?
}

model Skill {
  id   Int    @id @default(autoincrement())
  name String @unique
}

model Location {
  id   Int    @id @default(autoincrement())
  name String @unique
}

model Company {
  id       Int    @id @default(autoincrement())
  name     String @unique
  overview String
  location String
  jobs     String
  contacts String
}