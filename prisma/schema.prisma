// Updated Prisma schema

enum Role {
  USER
  ADMIN
}

model User {
  id         Int        @id @default(autoincrement())
  email      String     @unique
  password   String
  role       Role       @default(USER)
  name       String?
  major      String?
  skills     SkillModel[]
  interests  String[]
  location   Locations  @default(Remote)
  portfolio  String?
}

enum Condition {
  excellent
  good
  fair
  poor
}

enum Skill {
  JavaScript
  Python
  Java
  CSharp
  Ruby
  CPlusPlus
  Design
}

enum Locations {
  Honolulu
  NewYork
  SanFrancisco
  London
  Tokyo
  Remote
}

model SkillModel {  // Renamed model
  id   Int    @id @default(autoincrement())
  name String @unique
}

model Stuff {
  id        Int       @id @default(autoincrement())
  name      String
  quantity  Int
  condition Condition @default(good)
  owner     String
}

model Company {
  id         Int      @id @default(autoincrement())
  name       String   @unique
  salary     Int
  overview   String
  location   String
  jobs       String
  contacts   String
  idealSkill String[]
}

model Filter {
  id Int @id @default(autoincrement())
  skills Skill[]
  locations Locations @default(Honolulu)
}

model Location {
  id   Int    @id @default(autoincrement())
  name String @unique
}

model Student {
  id         Int       @id @default(autoincrement())
  name       String
  email      String    @unique
  skills     String[]
  image      String
  location   String
}

model AdminList {
  id    Int    @id @default(autoincrement())
  email String @unique
}
